# Example secrets configuration for Withings, intervals.icu, and Strava integration
# Copy this file to secrets.yaml and fill in your actual credentials
# Then encrypt with SOPS: sops -e -i secrets.yaml

withings:
  client_id: "YOUR_WITHINGS_CLIENT_ID"
  client_secret: "YOUR_WITHINGS_CLIENT_SECRET"
  redirect_uri: "http://localhost/callback"

intervals:
  api_key: "YOUR_INTERVALS_ICU_API_KEY"
  athlete_id: YOUR_ATHLETE_ID_NUMBER

strava:
  client_id: "YOUR_STRAVA_CLIENT_ID"
  client_secret: "YOUR_STRAVA_CLIENT_SECRET"
  redirect_uri: "http://localhost/callback"